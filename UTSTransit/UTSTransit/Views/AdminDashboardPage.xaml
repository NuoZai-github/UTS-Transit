<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UTSTransit.ViewModels"
             x:Class="UTSTransit.Views.AdminDashboardPage"
             x:DataType="vm:AdminDashboardViewModel"
             Title="Admin Dashboard"
             BackgroundColor="{StaticResource PageBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">
            
            <Label Text="Admin Panel" Style="{StaticResource HeaderLabel}" />

            <!-- Stats Cards -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="16" RowDefinitions="Auto, Auto" RowSpacing="16">
                <!-- Students -->
                <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="{StaticResource Primary}" BorderColor="Transparent">
                    <VerticalStackLayout>
                        <Label Text="{Binding StudentCount}" FontSize="32" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="Students" TextColor="White" Opacity="0.8"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Drivers -->
                <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="{StaticResource Accent}" BorderColor="Transparent">
                    <VerticalStackLayout>
                        <Label Text="{Binding DriverCount}" FontSize="32" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="Drivers" TextColor="White" Opacity="0.8"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Active Buses -->
                <Frame Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="{StaticResource Surface}">
                    <HorizontalStackLayout Spacing="16" VerticalOptions="Center">
                        <Label Text="ðŸšŒ" FontSize="32"/>
                        <VerticalStackLayout>
                            <Label Text="{Binding ActiveBusCount}" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}"/>
                            <Label Text="Active Buses Now" TextColor="{StaticResource TextSecondary}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>
            </Grid>

            <!-- Quick Actions -->
            <Label Text="Management" Style="{StaticResource SectionHeaderLabel}"/>
            
            <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto" ColumnSpacing="16" RowSpacing="16">
                <Button Text="Manage Users" Style="{StaticResource PrimaryButtonStyle}" />
                <Button Grid.Column="1" Text="Live Map" Style="{StaticResource PrimaryButtonStyle}" BackgroundColor="{StaticResource Info}"/>
                <Button Grid.Row="1" Text="Edit Schedule" Style="{StaticResource PrimaryButtonStyle}" BackgroundColor="{StaticResource Warning}"/>
                <Button Grid.Row="1" Grid.Column="1" Text="Post News" Style="{StaticResource PrimaryButtonStyle}" BackgroundColor="{StaticResource Success}"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
