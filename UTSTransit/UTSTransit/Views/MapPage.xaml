<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             xmlns:vm="clr-namespace:UTSTransit.ViewModels"
             x:Class="UTSTransit.Views.MapPage"
             Title="Live Map (OSM)">

    <Grid>
        <!-- Mapsui Control -->
        <mapsui:MapView x:Name="BusMap" 
                        IsMyLocationButtonVisible="True"
                        IsNorthingButtonVisible="True" 
                        IsZoomButtonVisible="True" />

        <VerticalStackLayout VerticalOptions="End" Margin="20">
            <Label Text="Listening for bus locations..." 
                   BackgroundColor="White" 
                   Padding="10"
                   HorizontalOptions="Center"
                   TextColor="Black"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>