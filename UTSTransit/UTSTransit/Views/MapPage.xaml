<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:vm="clr-namespace:UTSTransit.ViewModels"
             x:Class="UTSTransit.Views.MapPage"
             Title="Live Map">

    <Grid>
        <!-- Map Control -->
        <maps:Map x:Name="BusMap" IsShowingUser="True" />

        <VerticalStackLayout VerticalOptions="End" Margin="20">
            <Label Text="Listening for bus locations..." 
                   BackgroundColor="White" 
                   Padding="10"
                   HorizontalOptions="Center"
                   TextColor="Black"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>