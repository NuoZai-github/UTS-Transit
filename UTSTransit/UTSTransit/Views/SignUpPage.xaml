<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UTSTransit.ViewModels"
             x:Class="UTSTransit.Views.SignUpPage"
             x:DataType="vm:SignUpViewModel"
             Title="Register">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

            <Label Text="Create New Account"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Email"
                   Text="{Binding Email}"
                   Keyboard="Email" />

            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True" />

            <Entry Placeholder="Confirm Password"
                   Text="{Binding ConfirmPassword}"
                   IsPassword="True" />

            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="I am a Driver" VerticalOptions="Center" />
                <Switch IsToggled="{Binding IsDriver}" />
            </HorizontalStackLayout>

            <!-- Student ID: Visible only when NOT a driver -->
            <Entry Placeholder="Student ID"
                   Text="{Binding StudentId}">
                <Entry.Triggers>
                    <DataTrigger TargetType="Entry" Binding="{Binding IsDriver}" Value="True">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                    <DataTrigger TargetType="Entry" Binding="{Binding IsDriver}" Value="False">
                        <Setter Property="IsVisible" Value="True" />
                    </DataTrigger>
                </Entry.Triggers>
            </Entry>

            <!-- Driver Fields: Visible only when IS a driver -->
            <VerticalStackLayout Spacing="25" IsVisible="{Binding IsDriver}">
                <Entry Placeholder="IC Number"
                       Text="{Binding IcNumber}" />
                
                <Entry Placeholder="Driver Verification Code (Required)"
                       Text="{Binding VerificationCode}" />
            </VerticalStackLayout>

            <Label Text="{Binding StatusMessage}"
                   TextColor="Red"
                   HorizontalOptions="Center" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               Color="{StaticResource Primary}" />

            <Button Text="Register"
                    Command="{Binding RegisterCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HeightRequest="50" />

            <Button Text="Back to Login"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
