<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UTSTransit.ViewModels"
             x:Class="UTSTransit.Views.HomePage"
             x:DataType="vm:HomePageViewModel"
             Title="Home">

    <Grid RowDefinitions="Auto, *, Auto" Padding="24" RowSpacing="20">
        
        <!-- Header Section -->
        <Grid ColumnDefinitions="*, Auto">
            <VerticalStackLayout Spacing="4">
                <Label Text="{Binding Greeting}" 
                       FontSize="16" 
                       TextColor="{StaticResource TextSecondary}"/>
                <Label Text="{Binding UserName}" 
                       Style="{StaticResource HeaderLabel}"/>
            </VerticalStackLayout>
            
            <!-- Profile/Settings Icon -->
            <Border Grid.Column="1" 
                    StrokeShape="RoundRectangle 20" 
                    HeightRequest="40" 
                    WidthRequest="40" 
                    StrokeThickness="0"
                    BackgroundColor="{StaticResource PrimaryLight}"
                    VerticalOptions="Start"
                    Padding="0">
                <Grid>
                    <!-- Fallback Icon -->
                    <Label Text="ðŸ‘¤" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           TextColor="{StaticResource Primary}">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding HasAvatar}" Value="True">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>

                    <!-- Avatar Image -->
                    <Image Source="{Binding UserAvatar}" 
                           Aspect="AspectFill"
                           IsVisible="{Binding HasAvatar}"
                           HeightRequest="40"
                           WidthRequest="40"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Status Card (Floating Effect) -->
        <Frame Grid.Row="1" VerticalOptions="Center" CornerRadius="24" HasShadow="True" Padding="0" BackgroundColor="{StaticResource Surface}">
            <Grid RowDefinitions="200, Auto">
                <!-- Visual Tracking Area -->
                <Grid BackgroundColor="{StaticResource PrimaryLight}" Padding="15">
                    
                    <!-- Road Line -->
                    <BoxView HeightRequest="6" 
                             Color="#D0D0D0" 
                             CornerRadius="3"
                             VerticalOptions="Center" 
                             HorizontalOptions="Fill" 
                             Margin="45,0,45,20" /> <!-- Added bottom margin to align with icon centers -->

                    <!-- Hostel Station (Left) -->
                    <VerticalStackLayout HorizontalOptions="Start" VerticalOptions="Center" Spacing="4">
                        <Image Source="hostel_icon.png" HeightRequest="48" WidthRequest="48" Aspect="AspectFit"/>
                        <Label Text="Hostel" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource Primary}" HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Campus Station (Right) -->
                    <VerticalStackLayout HorizontalOptions="End" VerticalOptions="Center" Spacing="4">
                        <Image Source="campus_icon.png" HeightRequest="48" WidthRequest="48" Aspect="AspectFit"/>
                        <Label Text="Campus" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource Primary}" HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Moving Bus Layer -->
                    <!-- Margin matches the icons center roughly -->
                    <AbsoluteLayout VerticalOptions="Center" HeightRequest="80" Margin="45,0,45,20">
                        <Image Source="bus_side.png"
                               HeightRequest="50"
                               WidthRequest="80"
                               Aspect="AspectFit"
                               AbsoluteLayout.LayoutBounds="{Binding BusProgress, StringFormat='{0}, 0.5, 80, 50'}"
                               AbsoluteLayout.LayoutFlags="PositionProportional"
                               IsVisible="{Binding IsBusVisible}"/>
                    </AbsoluteLayout>
                    
                    <!-- Stopped State Overlay -->
                     <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                         <VerticalStackLayout.Triggers>
                            <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding IsBusVisible}" Value="True">
                                <Setter Property="IsVisible" Value="False"/>
                            </DataTrigger>
                             <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding IsBusVisible}" Value="False">
                                <Setter Property="IsVisible" Value="True"/>
                            </DataTrigger>
                        </VerticalStackLayout.Triggers>
                        
                        <Image Source="stop_sign.png" HeightRequest="50" WidthRequest="50" />
                        <Label Text="Not In Service" TextColor="{StaticResource Error}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                </Grid>

                <!-- Status Info -->
                <VerticalStackLayout Grid.Row="1" Padding="24" Spacing="8" BackgroundColor="{StaticResource Surface}">
                    <Label Text="Current Status" 
                           Style="{StaticResource CardSubtitleLabel}" 
                           HorizontalOptions="Center"/>
                    
                    <Label Text="{Binding StatusText}" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center" 
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource Primary}"/>
                    
                    <Label Text="{Binding LastUpdatedText}" 
                           FontSize="12" 
                           TextColor="{StaticResource TextSecondary}" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Quick Actions -->
        <Grid Grid.Row="2" ColumnDefinitions="*, *" ColumnSpacing="16">
            <!-- View Map Custom Button -->
            <Frame Grid.Column="0"
                   CornerRadius="12"
                   Padding="0"
                   HasShadow="False"
                   HeightRequest="52"
                   BorderColor="Transparent"
                   BackgroundColor="{StaticResource Primary}">
                 <Frame.GestureRecognizers>
                     <TapGestureRecognizer Command="{Binding GoToMapCommand}" />
                 </Frame.GestureRecognizers>
                 <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
                     <Image Source="map_icon.png" 
                            HeightRequest="32" 
                            WidthRequest="32" 
                            VerticalOptions="Center"/>
                     <Label Text="View Map" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            VerticalOptions="Center"/>
                 </HorizontalStackLayout>
            </Frame>
            
            <!-- Schedule Custom Button -->
            <Frame Grid.Column="1"
                   CornerRadius="12"
                   Padding="0"
                   HasShadow="False"
                   HeightRequest="52"
                   BorderColor="{StaticResource Primary}"
                   BackgroundColor="{StaticResource Surface}">
                 <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
                     <Image Source="schedule_icon.png" 
                            HeightRequest="32" 
                            WidthRequest="32" 
                            VerticalOptions="Center"/>
                     <Label Text="Schedule" 
                            TextColor="{StaticResource Primary}" 
                            FontAttributes="Bold" 
                            VerticalOptions="Center"/>
                 </HorizontalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
