<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UTSTransit.ViewModels"
             x:Class="UTSTransit.Views.DriverPage"
             x:DataType="vm:DriverViewModel"
             Title="Driver Console">

    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="24" VerticalOptions="Center">

            <Label Text="Driver Console" 
                   Style="{StaticResource HeaderLabel}" />

            <VerticalStackLayout Spacing="8">
                <Label Text="Select Route" Style="{StaticResource SubHeaderLabel}" HorizontalOptions="Start"/>
                <Border Style="{StaticResource InputBorder}">
                    <Picker SelectedItem="{Binding SelectedRoute}" Title="Select a route">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Route A (Dorm -> Campus)</x:String>
                                <x:String>Route B (Campus -> Hostel)</x:String>
                                <x:String>Weekend Special</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Current Status" Style="{StaticResource SubHeaderLabel}" HorizontalOptions="Start"/>
                <Border Style="{StaticResource InputBorder}">
                    <Picker ItemsSource="{Binding StatusOptions}" 
                            SelectedItem="{Binding SelectedStatus}"
                            Title="Select status"/>
                </Border>
            </VerticalStackLayout>

            <Label Text="{Binding StatusMessage}" 
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center" 
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               HorizontalOptions="Center" />

            <Button Text="Start / Stop Trip"
                    Command="{Binding ToggleSharingCommand}"
                    Margin="0,16,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>