<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UTSTransit.ViewModels"
             x:Class="UTSTransit.Views.DriverPage"
             x:DataType="vm:DriverViewModel"
             Title="Driver App">

    <ContentPage.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

        <Label Text="ðŸšŒ Bus Tracker - Driver App" 
               FontSize="24" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"/>

        <Label Text="Select Current Route:" />

        <Picker SelectedItem="{Binding SelectedRoute}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Route A (Dorm -> Campus)</x:String>
                    <x:String>Route B (Campus -> Dorm)</x:String>
                    <x:String>Weekend Special</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label Text="Current Status:" />
        <Picker ItemsSource="{Binding StatusOptions}" 
                SelectedItem="{Binding SelectedStatus}" />

        <Label Text="{Binding StatusMessage}" 
               TextColor="Blue"
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center"/>

        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                           Color="Orange" />

        <Button Text="Start/Stop Trip"
                Command="{Binding ToggleSharingCommand}"
                BackgroundColor="#512BD4"
                TextColor="White"
                HeightRequest="60"
                FontSize="18"/>

    </VerticalStackLayout>
</ContentPage>