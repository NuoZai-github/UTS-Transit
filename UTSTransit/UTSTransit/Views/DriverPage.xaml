<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UTSTransit.ViewModels"
             x:Class="UTSTransit.Views.DriverPage"
             x:DataType="vm:DriverViewModel"
             Title="Driver Console">

    <Grid RowDefinitions="Auto, *">
        <!-- Header -->
        <VerticalStackLayout Padding="24" BackgroundColor="{StaticResource Primary}">
            <Label Text="Driver Console" 
                   Style="{StaticResource HeaderLabel}" 
                   TextColor="White"/>
            <Label Text="Manage your trip status" 
                   TextColor="{StaticResource PrimaryLight}"
                   FontSize="14"/>
        </VerticalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="24" Padding="24">

                <!-- Route Selection Card -->
                <Frame>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Select Route" Style="{StaticResource CardTitleLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <Picker SelectedItem="{Binding SelectedRoute}" Title="Select a route">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Route A (Dorm -> Campus)</x:String>
                                        <x:String>Route B (Campus -> Hostel)</x:String>
                                        <x:String>Weekend Special</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>
                </Frame>

                <!-- Status Selection Card -->
                <Frame>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Current Status" Style="{StaticResource CardTitleLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <Picker ItemsSource="{Binding StatusOptions}" 
                                    SelectedItem="{Binding SelectedStatus}"
                                    Title="Select status"/>
                        </Border>
                    </VerticalStackLayout>
                </Frame>

                <!-- Status Message -->
                <Label Text="{Binding StatusMessage}" 
                       TextColor="{StaticResource Accent}"
                       HorizontalOptions="Center" 
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       FontSize="16"/>

                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   HorizontalOptions="Center" />

                <!-- Big Action Button -->
                <Button Text="Start / Stop Trip"
                        Command="{Binding ToggleSharingCommand}"
                        Style="{StaticResource AccentButton}"
                        HeightRequest="60"
                        FontSize="18"
                        Margin="0,16,0,0"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>