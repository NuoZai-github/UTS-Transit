<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UTSTransit.ViewModels"
             x:Class="UTSTransit.Views.DriverPage"
             x:DataType="vm:DriverViewModel"
             Title="Driver Console">

    <Grid RowDefinitions="Auto, *">
        <!-- Header -->
        <VerticalStackLayout Padding="24" BackgroundColor="{StaticResource Primary}">
            <Label Text="Driver Console" 
                   Style="{StaticResource HeaderLabel}" 
                   TextColor="White"/>
            <Label Text="Manage your trip status" 
                   TextColor="{StaticResource PrimaryLight}"
                   FontSize="14"/>
        </VerticalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="24" Padding="24">

                <!-- Schedule Selection -->
                <Frame>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Select Trip to View Passengers" Style="{StaticResource CardTitleLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <Picker ItemsSource="{Binding Schedules}" 
                                    SelectedItem="{Binding SelectedScheduleItem}"
                                    ItemDisplayBinding="{Binding DepartureTime}"
                                    Title="Select a departure time"/>
                        </Border>
                         <Label Text="{Binding SelectedRoute}" 
                                TextColor="{StaticResource TextSecondary}" 
                                HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Status Selection Card -->
                <Frame>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Current Status" Style="{StaticResource CardTitleLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <Picker ItemsSource="{Binding StatusOptions}" 
                                    SelectedItem="{Binding SelectedStatus}"
                                    Title="Select status"/>
                        </Border>
                    </VerticalStackLayout>
                </Frame>

                <!-- Passenger List -->
                <Frame IsVisible="{Binding SelectedScheduleItem, Converter={StaticResource IsNotNullConverter}}">
                    <VerticalStackLayout Spacing="12">
                         <Label Text="Passenger List" Style="{StaticResource CardTitleLabel}"/>
                         <CollectionView ItemsSource="{Binding PassengerList}" HeightRequest="150" EmptyView="No bookings yet">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border StrokeShape="RoundRectangle 8" BackgroundColor="{StaticResource PageBackground}" Padding="10" Margin="0,4" StrokeThickness="0">
                                        <Label Text="{Binding .}" TextColor="{StaticResource TextPrimary}" />
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                         </CollectionView>
                    </VerticalStackLayout>
                </Frame>
                <!-- Status Message -->
                <Label Text="{Binding StatusMessage}" 
                       TextColor="{StaticResource Accent}"
                       HorizontalOptions="Center" 
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       FontSize="16"/>

                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   HorizontalOptions="Center" />

                <!-- Big Action Button -->
                <Button Text="Start / Stop Trip"
                        Command="{Binding ToggleSharingCommand}"
                        Style="{StaticResource AccentButton}"
                        HeightRequest="60"
                        FontSize="18"
                        Margin="0,16,0,0"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>