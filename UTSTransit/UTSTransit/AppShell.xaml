<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UTSTransit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:UTSTransit.Views"
    Title="UTSTransit">

    <!-- Login Page (Initial Page) -->
    <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />

    <!-- Bottom Tab Bar -->
    <TabBar Route="MainTabs">
        <Tab Title="I am Driver" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:DriverPage}" />
        </Tab>
        <Tab Title="Schedule" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:TimetablePage}" />
        </Tab>
        <Tab Title="Live Map" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:MapPage}" Route="MapPage" />
        </Tab>
        <Tab Title="News" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:AnnouncementsPage}" />
        </Tab>
        <Tab Title="Profile" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>