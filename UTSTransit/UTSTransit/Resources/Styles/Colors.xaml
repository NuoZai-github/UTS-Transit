<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Modern Palette -->
    
    <!-- Brand Colors -->
    <Color x:Key="Primary">#10A37F</Color> <!-- ChatGPT Teal -->
    <Color x:Key="PrimaryDark">#0D8C6D</Color>
    <Color x:Key="Secondary">#F7F7F8</Color>
    
    <!-- Backgrounds -->
    <Color x:Key="PageBackground">#FFFFFF</Color>
    <Color x:Key="PageBackgroundDark">#343541</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceDark">#444654</Color>
    <Color x:Key="InputBackground">#FFFFFF</Color>
    <Color x:Key="InputBackgroundDark">#40414F</Color>

    <!-- Text -->
    <Color x:Key="TextPrimary">#202123</Color>
    <Color x:Key="TextPrimaryDark">#ECECF1</Color>
    <Color x:Key="TextSecondary">#6E6E80</Color>
    <Color x:Key="TextSecondaryDark">#C5C5D2</Color>
    <Color x:Key="TextPlaceholder">#8E8EA0</Color>

    <!-- Borders -->
    <Color x:Key="Border">#C5C5D2</Color>
    <Color x:Key="BorderDark">#565869</Color>
    <Color x:Key="BorderFocus">#10A37F</Color>

    <!-- Status -->
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Success">#10A37F</Color>
    <Color x:Key="Warning">#EAB308</Color>

    <!-- Legacy (Keep for compatibility) -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#F7F7F8</Color>
    <Color x:Key="Gray200">#ECECF1</Color>
    <Color x:Key="Gray300">#D9D9E3</Color>
    <Color x:Key="Gray400">#ACACBE</Color>
    <Color x:Key="Gray500">#8E8EA0</Color>
    <Color x:Key="Gray600">#565869</Color>
    <Color x:Key="Gray900">#202123</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
</ResourceDictionary>