<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- UTS Transit Modern Palette -->
    
    <!-- Brand Colors (UTS Blue & Accents) -->
    <Color x:Key="Primary">#00549E</Color> <!-- UTS Deep Blue -->
    <Color x:Key="PrimaryDark">#003E75</Color>
    <Color x:Key="PrimaryLight">#E6F0FA</Color>
    
    <!-- Accent Colors (High Visibility) -->
    <Color x:Key="Accent">#FF6B00</Color> <!-- Vibrant Orange for CTAs/Live Data -->
    <Color x:Key="AccentDark">#CC5500</Color>
    
    <!-- Status Colors -->
    <Color x:Key="Success">#10B981</Color> <!-- Modern Green -->
    <Color x:Key="Warning">#F59E0B</Color> <!-- Amber -->
    <Color x:Key="Error">#EF4444</Color>   <!-- Red -->
    <Color x:Key="Info">#3B82F6</Color>    <!-- Blue -->

    <!-- Backgrounds -->
    <Color x:Key="PageBackground">#F8FAFC</Color> <!-- Very light blue-gray -->
    <Color x:Key="PageBackgroundDark">#0F172A</Color> <!-- Slate 900 -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceDark">#1E293B</Color> <!-- Slate 800 -->
    
    <!-- Text -->
    <Color x:Key="TextPrimary">#1E293B</Color> <!-- Slate 800 -->
    <Color x:Key="TextPrimaryDark">#F1F5F9</Color> <!-- Slate 100 -->
    <Color x:Key="TextSecondary">#64748B</Color> <!-- Slate 500 -->
    <Color x:Key="TextSecondaryDark">#94A3B8</Color> <!-- Slate 400 -->
    <Color x:Key="TextInverse">#FFFFFF</Color>

    <!-- Borders & Dividers -->
    <Color x:Key="Border">#E2E8F0</Color> <!-- Slate 200 -->
    <Color x:Key="BorderDark">#334155</Color> <!-- Slate 700 -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackground}"/>
</ResourceDictionary>